extends layout 

block content
    p.text-center You are playing game #{gameId} as #{player.name}
    div.text-center
        form(class="form-signin" method="POST" action=`/useCard?gameId=${gameId}&playerName=${player.name}&cardName=${cardName}`)
                if availablePlayers
                    p.text-center Select a player to play #{cardName} card with
                    each player in availablePlayers
                        div.form-check
                            input(type="radio" name="playerTwoName" id=`${player.name}` class="form-check-input" value=`${player.name}` required)
                            label( for=`${player.name}` class="form-check-label") #{player.name}
                            
                    - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                    button(class=buttonClass type="submit") Select Player
                else
                    h1 There are no players with #{cardName} card
