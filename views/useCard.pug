extends layout 

block content 
    p.text-center You are playing game #{gameId} as #{playerName}
    if result
        p.text-center #{result}
    else
        p.text-center Waiting for #{playerTwoName} to accept #{cardName} card...
        form(class="form-signin" method="POST" action=`/useCard?gameId=${gameId}&playerName=${playerName}&cardName=${cardName}`)
            input(type="hidden" name="playerTwoName" id="playerTwoName" class="form-control" value=`${playerTwoName}` required)
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Refresh
