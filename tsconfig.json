{
    "compilerOptions": {
        "rootDirs": [
            "./src",
            "./test"
        ],
        "outDir": "dist",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": [
        "src",
        "src/**/*.ts",
        "test",
        "test/**/*.test.ts"
    ],
}
